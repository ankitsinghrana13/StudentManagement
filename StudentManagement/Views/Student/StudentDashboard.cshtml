        <div class="dashboard-container">
            <header>
                <h1 id="main-title">Student Management Dashboard</h1>
                <p class="welcome-text" id="welcome-message">Welcome back! Here's your overview</p>
            </header>

            <div class="dashboard-wrapper">

                <!-- Changed to a dedicated stats container -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">👨‍🎓</div>
                        <div class="stat-number">@Model.studentCount</div>
                        <div class="stat-label">Total Students</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">👨‍🏫</div>
                        <div class="stat-number">48</div>
                        <div class="stat-label">Teachers</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">📚</div>
                        <div class="stat-number">@Model.courseCount</div>
                        <div class="stat-label">Courses</div>
                    </div>
                </div>
            </div>

            <div class="button-container-wrapper">
                <div class="action-buttons mergeandgrap">
                    <form asp-controller="Student" asp-action="Create" method="post">
                        <button class="action-btn" id="add-student-btn">
                            <span>➕</span>
                            <span id="add-student-text">Add New Student</span>
                        </button>
                    </form>
                    <form asp-controller="Student" asp-action="Index" method="post">
                        <button class="action-btn" id="view-students-btn">
                            <span>📋</span>
                            <span id="view-students-text">View All Students</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="recent-activity">
                <h2>Recent Activity</h2>
                <div class="activity-item">
                    <div class="activity-icon">
                        ✅
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">
                            New student enrolled
                        </div>
                        <div class="activity-time">
                            Sarah Johnson - 2 hours ago
                        </div>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        📝
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">
                            Grade updated
                        </div>
                        <div class="activity-time">
                            Mathematics - Class 10A - 5 hours ago
