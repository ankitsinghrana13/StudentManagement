<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body { font-family: Arial; background: #f5f7fa; margin:0; }
        nav { background:#333; color:white; padding:10px; }
        nav a { color:white; margin-right:10px; text-decoration:none; }
        nav button { background:red; color:white; border:none; padding:5px 10px; cursor:pointer; }
        .container { padding:20px; }
  
    </style>
</head>
<body>
    <nav>
        @if(User.Identity.IsAuthenticated)
        {
            <div class="button-container-wrapper">
            <span>@User.Identity.Name</span>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit">Logout</button>
            </form>
            <form asp-controller="Student" asp-action="StudentDashboard" class="home" method="post" style="display:inline;">
                <button type="submit">Home</button>
            </form>
            </div>
        }
    </nav>

    <div class="container">
        @RenderBody() <!-- THIS IS REQUIRED -->
    </div>
</body>
</html>
