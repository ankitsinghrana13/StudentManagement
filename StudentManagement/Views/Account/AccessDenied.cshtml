@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Access Denied</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

        h2 {
            color: #e74c3c;
            margin-bottom: 15px;
        }

        p {
            color: #555;
        }

        a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Access Denied</h2>
        <p>You do not have permission to access this page.</p>
        <a asp-controller="Account" asp-action="Login">Go to Login</a>
    </div>
</body>
</html>
