@using Microsoft.AspNetCore.Identity
@using StudentManagement.Core.Entities
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
    Layout = "_Layout"; // Use _Layout.cshtml for consistent navbar
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users - Student Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }

        a.button {
            display: inline-block;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

            a.button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>All Users</h2>

        <table>
            <tr>
                <th>Email</th>
                <th>Roles</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        @{
                            var roles = await Context.RequestServices
                            .GetRequiredService<UserManager<ApplicationUser>>()
                            .GetRolesAsync(user);
                        }
                        @string.Join(", ", roles)
                    </td>
                </tr>
            }
        </table>

        <a asp-action="Create" class="button">Create New User</a>
    </div>
</body>
</html>
